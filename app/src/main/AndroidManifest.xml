<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LocationApp"
        tools:targetApi="31">
        <activity
            android:name=".PropertyEditorActivity"
            android:exported="false" />
        <activity
            android:name=".AgentPropertiesActivity"
            android:label="Gérer les offres" />
        <activity
            android:name=".ContactAgentActivity"
            android:exported="false" />
        <activity
            android:name=".AgentRequestsActivity"
            android:label="Consulter les demandes" />
        <activity
            android:name=".ProfileManagementActivity"
            android:label="Gérer le profil" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".PropertyDetailActivity"
            android:exported="false" />
        <activity
            android:name=".OffersActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AgentDashboardActivity"
            android:label="Tableau de bord Agent" />
        <activity
            android:name=".ClientDashboardActivity"
            android:label="Dashboard Client" />
        <activity
            android:name=".ClientRequestsActivity"
            android:label="Mes demandes" />
    </application>

</manifest>