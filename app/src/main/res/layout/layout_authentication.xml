<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_auth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Email input -->
    <EditText
        android:id="@+id/auth_edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp" />

    <!-- Password input -->
    <EditText
        android:id="@+id/auth_edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp" />

    <!-- Error message (initially invisible) -->
    <TextView
        android:id="@+id/auth_text_view_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Login et/ou mot de passe incorrects, ressayer Ã  nouveau"
        android:textColor="#FF0000"
        android:visibility="gone" />

    <!-- Login button -->
    <Button
        android:id="@+id/auth_button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:text="Login"
        android:textColor="#FFFFFF" />

    <!-- Sign Up button -->
    <Button
        android:id="@+id/auth_button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="SignUp"
        android:textColor="#FFFFFF" />

</LinearLayout>