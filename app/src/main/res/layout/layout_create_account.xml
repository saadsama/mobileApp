<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_cpt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Role selection (Agent/Client) -->
    <RadioGroup
        android:id="@+id/cpt_radio_group_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/cpt_radio_button_agent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Agent" />

        <RadioButton
            android:id="@+id/cpt_radio_button_client"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Client" />
    </RadioGroup>

    <!-- Last name input -->
    <EditText
        android:id="@+id/cpt_edit_text_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edit_text_background"
        android:hint="Nom"
        android:inputType="textPersonName"
        android:padding="12dp" />

    <!-- First name input -->
    <EditText
        android:id="@+id/cpt_edit_text_prenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edit_text_background"
        android:hint="Prenom"
        android:inputType="textPersonName"
        android:padding="12dp" />

    <!-- Age input -->
    <EditText
        android:id="@+id/cpt_edit_text_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edit_text_background"
        android:hint="Age"
        android:inputType="number"
        android:padding="12dp" />

    <!-- Email input -->
    <EditText
        android:id="@+id/cpt_edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edit_text_background"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp" />

    <EditText
        android:id="@+id/cpt_edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"/>

    <!-- Phone number input -->
    <EditText
        android:id="@+id/cpt_edit_text_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edit_text_background"
        android:hint="Tel"
        android:inputType="phone"
        android:padding="12dp" />

    <!-- Country input -->
    <EditText
        android:id="@+id/cpt_edit_text_pays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edit_text_background"
        android:hint="Pays"
        android:inputType="textPostalAddress"
        android:padding="12dp" />

    <!-- Agency field (only visible for agents) -->
    <EditText
        android:id="@+id/cpt_edit_text_agency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edit_text_background"
        android:hint="..."
        android:padding="12dp" />

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cpt_button_confirmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Confirmer"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/cpt_button_annuler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Annuler"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>